{% extends "layouts/base.html.twig" %}

{% block titre %}
   liste articles
{% endblock %}

{% block main %}

<h1 class="text-center mt-5" >Liste articles</h1>

<div class="row mt-5">
    <div class="col-6 offset-3">
        <table style="text-align: center;" class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Résumé</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.name }}</td>
                        <td>{{ article.description }}</td>
                        <td>{{ article.price }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{path('app_article',{'id':article.id})}}" > <i class="fa-solid fa-eye"></i> </a>
                            <a class="btn btn-success" href="#"> <i class="fa-solid fa-pen-to-square"></i> </a>
                            <a class="btn btn-danger" href="#"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}